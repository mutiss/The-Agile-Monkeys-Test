<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="albumItem"
            type="com.carlosblaya.theagilemonkeystest.domain.model.Album" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_image_album"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="center"></ImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_name_album"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/monts_bold"
                    android:text=""
                    android:layout_marginTop="-1dp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_18"></androidx.appcompat.widget.AppCompatTextView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_release_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/monts_bold"
                    android:text=""
                    android:layout_marginTop="8dp"
                    android:textColor="@color/dark"
                    android:textSize="@dimen/text_size_14"></androidx.appcompat.widget.AppCompatTextView>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>